<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/message_fragment"
    android:background="@color/colorSilverSelectedItem"
    tools:context=".view.fragments.fragmentInSaidShowItemDetails.FragmentSimilarItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:layout_marginStart="16dp"
            android:id="@+id/similer_ads_tv"
            android:text="@string/similar"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_similar_1_RV"
            android:layout_marginTop="8dp"
            android:layout_marginStart="0dp"
            android:visibility="visible"
            />


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_similar_2_RV"
            android:layout_marginTop="4dp"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_similar_3_RV"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

</RelativeLayout>

