<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="280dp"
        android:layout_height="350dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/adapter_suggested_item_CV"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/adapter_suggested_item_card_button">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="200dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/adapter_suggested_item_image_view">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="1dp"
                android:alpha="0.7"
                android:layout_marginStart="8dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp">

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:alpha="0.7"
                        android:background="@color/colorBlack"
                        >

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/number_of_image"
                                android:layout_centerHorizontal="true"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="12dp"
                                android:text="30"
                                android:layout_centerVertical="true"
                                android:id="@+id/adapter_suggested_item_number_of_item_image"
                                android:layout_marginLeft="4dp"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="4dp">

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:alpha="0.7"
                        android:background="@color/colorBlack"
                        >

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/comment"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="12dp"
                                android:text="30"
                                android:layout_centerVertical="true"
                                android:id="@+id/adapter_suggested_item_number_of_item_comment"
                                android:layout_marginLeft="4dp"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="208dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textSize="16dp"
                            android:textColor="@color/colorBlack"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_title"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_text1"
                            />
                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:id="@+id/adapter_suggested_item_container_text2"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_text2"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        android:id="@+id/adapter_suggested_item_container_text3"
                        android:background="@drawable/category_bg"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorWhite"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_text3"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/adapter_suggested_item_container_text4"
                        android:background="@drawable/car_details_bg"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_text4"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_details_bg"
                        android:id="@+id/adapter_suggested_item_container_city"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="3dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textSize="12dp"
                            android:textColor="@color/colorBlack3"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_city"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/strike"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="5dp"
                            android:textSize="13dp"
                            android:visibility="gone"
                            android:textColor="@color/colorGreen"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_old_price"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/strike"
                            android:layout_margin="3dp"
                            android:textSize="15dp"
                            android:textColor="@color/colorGreen"
                            android:text="test text"
                            android:id="@+id/adapter_suggested_item_car_price"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:layout_margin="3dp"
                                android:textColor="@color/colorGreen"
                                android:text="test text"
                                android:id="@+id/adapter_suggested_item_car_new_price"
                                />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginStart="4dp"
                                android:id="@+id/adapter_suggested_fire_iv"
                                android:background="@drawable/fire"/>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:alpha="0.6"
                        android:visibility="gone"
                        android:layout_marginRight="12dp"
                        android:background="@color/colorSilver"
                        android:layout_marginLeft="3dp"
                        >

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:weightSum="100">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60">

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:id="@+id/adapter_suggested_call_button"
                            android:background="@drawable/call_button_bg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/call"
                                android:layout_marginLeft="1dp"
                                android:layout_marginStart="6dp"
                                android:textSize="18dp"
                                android:textColor="@color/colorWhite"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/adapter_suggested_call_tv"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/adapter_suggested_favorite_rl"
                        android:layout_weight="25">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/adapter_suggested_favorite_iv"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="1dp"
                            android:layout_marginStart="25dp"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="200dp"
                android:background="@color/colorSilver"/>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="175dp"
                >
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/adapter_suggested_item_user_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/circl_silver_bg"
                            app:civ_border_color="@color/colorSilver"
                            app:civ_border_width="1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="#8BC34A"
                            app:civ_shadow_radius="0" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mohammad k"
                            android:textSize="12dp"
                            android:id="@+id/adapter_suggested_item_user_name"
                            android:textColor="@color/colorBlack"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>